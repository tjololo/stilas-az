{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "conflict",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
        {
      "matchManagers": [
        "bazel-module",
        "gomod"
      ],
      "groupName": "{{manager}} non-major dependencies",
      "matchCurrentVersion": ">=1.0.0",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupSlug": "{{manager}}-minor-patch",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
